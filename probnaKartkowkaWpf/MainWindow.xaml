<Window x:Class="probnaKartkowkaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:probnaKartkowkaWpf"
        mc:Ignorable="d"
        Title="Kalkulator" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Podaj liczbe</TextBlock>
            <TextBox Width="200" x:Name="liczba_Text_Box"></TextBox>

        </StackPanel>

        <RadioButton GroupName="radio" x:Name="silnia" >Silnia</RadioButton>
        <RadioButton GroupName="radio" x:Name="sumacyfr">Suma cyfr</RadioButton>
        <RadioButton GroupName="radio" x:Name="czypierwsza">Czy pierwsza</RadioButton><!--w stack panelu lacza sie automatycznie ale na wypadek daj group name -->
        <Button Click="Button_Click_Wywolaj_Funkcje">Oblicz</Button>

        <ComboBox  x:Name="comboBoxXName">
            <ComboBoxItem>silnia</ComboBoxItem>
            <ComboBoxItem>suma cyfr</ComboBoxItem>
            <ComboBoxItem>czy pierwsza</ComboBoxItem>
        </ComboBox>
        <Button Click="Button_Click_ComboBox">Oblicz combobox</Button>

    </StackPanel>
</Window>
